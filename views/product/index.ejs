<div class="row">
    <h1 class="page-header">All Products</h1>
        <% products.forEach(function (product) { %>
        <div class="col-md-6">
        <div class="col-md-6">
            <h2><%= product.title %>: </h2>
            <p class="product-desc"><%= product.description %></p>
        </div>
        <div class="col-md-6">
            <a href=<%= "/product/" + product._id %>><img src="<%= product.imageUrl %>" class="product-image" alt="<%= product.title %>"></a>
        </div>
        </div>
        <% }) %>
      <div class="clearfix"></div>
</div>
