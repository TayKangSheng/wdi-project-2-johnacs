<div class="container">
  <h1 class="page-header">Edit Order</h1>
  <p><%= order.productId[0].title %> </p>
  <p><%= order.customerId[0].fullName %> </p>
  <p><%= order.customerId[0].address %> </p>
  <p><%= order.customerId[0].contactNumber %> </p>
  <form action=<%= "/order/" + order.id + "?_method=PUT" %> method="POST">

    <div class="form-group">
      <label for="completed">Completed</label>
      <div class="radio">
        <label>
          <% if (order.completed == true) { %>
            <input type="radio" name="completed" id="true" value="true" checked="checked">
          <% } else { %>
            <input type="radio" name="completed" id="true" value="true">
          <% } %>
          True
        </label>
      </div>
      <div class="radio">
        <label>
          <% if (order.completed == false) { %>
            <input type="radio" name="completed" id="false" value="false" checked="checked">
          <% } else { %>
            <input type="radio" name="completed" id="false" value="false">
          <% } %>
          False
        </label>
      </div>
    </div>
    <button type="submit" class="btn btn-default">Submit</button>
  </form>
</div>
