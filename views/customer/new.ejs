<% include ../partials/header_customer %>
    <section class="section green">
        <div class="container">
            <div class="row">
                <div class="span8">
                    <h1 class="page-header">New Customer</h1>
                    <form action="/customer" method="POST">
                        <div class="form-group">
                            <label for="fName">First Name: </label>
                            <input type="text" class="form-control" id="fNameInput" placeholder="First Name" name="fName">
                            <label for="lName">Last Name: </label>
                            <input type="text" class="form-control" id="lNameInput" placeholder="Last Name" name="lName">
                            <label for="email">Email: </label>
                            <input type="email" class="form-control" id="emailInput" placeholder="Email" name="email">
                            <label for="address">Address: </label>
                            <input type="text" class="form-control" id="addressInput" placeholder="Address" name="address">
                            <label for="contact">Contact Number: </label>
                            <input type="text" class="form-control" id="contactInput" placeholder="Contact Number" name="contact">

                        </div>
                        <button type="submit" class="btn btn-default">Submit</button>
                    </form>
                </div>
            </div>
        </div>
    </section>
