<% include ../partials/header_device %>
    <section class="section green">
        <div class="container">
            <div class="row">
                <div class="span8">
                    <h1 class="page-header">New Device</h1>
                    <form action="/device" method="POST">
                        <div class="form-group">
                            <label for="deviceId">Device ID</label>
                            <input type="text" class="form-control" id="deviceIdInput" placeholder="deviceId" name="deviceId">
                            <label for="imageUrl">Device Image URL</label>
                            <input type="text" class="form-control" id="imageUrlInput" placeholder="imageUrl" name="deviceUrl">
                        </div>
                        <select name="productId">
                    <% products.forEach(function (product) {%>
                      <option value="<%=product.id%>"><%= product.title %></option>
                    <% }) %>
                </select>
                        <select name="customerId">
                    <% customers.forEach(function (customer) {%>
                      <option value="<%=customer.id%>"><%= customer.fullName %></option>
                    <% }) %>
                </select>
                        <button type="submit" class="btn btn-default">Submit</button>
                    </form>
                </div>
            </div>
        </div>
    </section>
