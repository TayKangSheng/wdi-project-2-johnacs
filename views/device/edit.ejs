<div class="container">
  <h1 class="page-header">Edit Device</h1>
  <!-- <pre><%=device%></pre> -->
  <h2>Device ID: <%=device.deviceId%></h2>
  <h3>Current Product: <%=device.productId[0].title%></h3>
  <h3>Current Customer: <%=device.customerId[0].fullName%></h3>
  <form action=<%= "/device/" + device.id + "?_method=PUT" %> method="POST">
    <div class="form-group">
      <label for="deviceId">Device ID</label>
      <input type="text" name="deviceId" class="form-control" id="deviceIdInput" value="<%= device.deviceId %>">
    </div>
    <select name="productId">
      <% products.forEach(function (product) {%>
        <option value="<%=product.id%>"><%= product.title %></option>
      <% }) %>
  </select>
  <select name="customerId">
    <% customers.forEach(function (customer) {%>
      <option value="<%=customer.id%>"><%= customer.fullName %></option>
    <% }) %>
</select>
    <button type="submit" class="btn btn-default">Submit</button>
  </form>
</div>
